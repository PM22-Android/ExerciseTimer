<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="HardcodedText">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/app_red"
            app:cardCornerRadius="100dp"
            app:cardElevation="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:strokeColor="#EBEBEB"
            app:strokeWidth="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="200dp"
                android:layout_height="200dp">
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/min_actv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="45sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/okra_medium"
                    android:maxLength="2"
                    android:text="00"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/separator_actv"
                    app:layout_constraintTop_toTopOf="@id/separator_actv"
                    app:layout_constraintBottom_toBottomOf="@id/separator_actv"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/separator_actv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="50sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/okra_bold"
                    android:text=":"
                    app:layout_constraintStart_toEndOf="@id/min_actv"
                    app:layout_constraintEnd_toStartOf="@id/sec_actv"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/sec_actv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textSize="45sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/okra_medium"
                    android:maxLength="2"
                    android:text="00"
                    app:layout_constraintStart_toEndOf="@id/separator_actv"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/separator_actv"
                    app:layout_constraintBottom_toBottomOf="@id/separator_actv"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>